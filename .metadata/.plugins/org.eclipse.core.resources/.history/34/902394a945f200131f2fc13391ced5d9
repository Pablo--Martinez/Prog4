int main(){
	Farmacologico t;
	Quirurjico q;
	Medicamento* m;
	Fecha f;
	f = Fecha(15,7,1992);
	Usuario* u = new Usuario(1234,"Pablo","Martinez",M,true,f);
	Medico* r = new Medico(u);
	u->agregarRol(r);
	
	t = Farmacologico("Tratamiento farmacol√≥gico");

	m = new Medicamento("Perifar");
	t.agregarMedicamento(m);

	m = new Medicamento("Redoxon");
	t.agregarMedicamento(m);

	m = new Medicamento("Diazepan");
	t.agregarMedicamento(m);

	m = new Medicamento("Aspirina");
	t.agregarMedicamento(m);
	t.show();
	
	Fecha f2;
	f2 = Fecha(12,8,2014);
	q = Quirurjico("Tratamiento quirurgico",f2,r);
	q.show();

	return 0;
}
